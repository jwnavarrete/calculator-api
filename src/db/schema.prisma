generator client {
  provider      = "prisma-client-js"
  output        = "./generated"
  binaryTargets = ["native", "debian-openssl-3.0.x"] //  "debian-openssl-3.0.x" for google functions
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Inventory {
  id      Int      @id @default(autoincrement())
  sku     String   @unique
  name    String
  count   Int
  blocked Int
  orders  OrderLine[]
}

model Order {
  id          Int         @id @default(autoincrement())
  orderNumber String      @unique
  status      String      // Puede ser "fulfilled" o "not fulfilled"
  orderLines  OrderLine[]
}

model OrderLine {
  id        Int      @id @default(autoincrement())
  sku       String
  quantity  Int
  orderId   Int
  order     Order     @relation(fields: [orderId], references: [id])
  inventory Inventory @relation(fields: [sku], references: [sku])
}